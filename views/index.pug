doctype html PUBLIC "-//W3C//DTD XHTML Basic 1.1//EN"
html
  head
    title= data.title 
  link(id="favicon", rel="icon", href="https://glitch.com/edit/favicon-app.ico", type="image/x-icon")
  meta(charset="utf-8")
  meta(name="viewport", content="width=device-width, initial-scale=1")
  link(rel="stylesheet", href="/style.css")
  body
    main
    if data.isSearched
      if data.content.dataId
        div.result= data.content.pageCounter + ' pages'
          span(class='continue')  countinue?
    else
      form(method="get")
        input(class="search", type="search", name="search")
    footer
      a(href="https://glitch.com") Remix this in Glitch
    script(src="/controllers/ajax.js")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")