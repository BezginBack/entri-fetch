doctype html PUBLIC "-//W3C//DTD XHTML Basic 1.1//EN"
html
  head
    title= data.title 
  link(id="favicon", rel="icon", href="https://glitch.com/edit/favicon-app.ico", type="image/x-icon")
  meta(charset="utf-8")
  meta(name="viewport", content="width=device-width, initial-scale=1")
  link(rel="stylesheet", href="/style.css")
  script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js", type="text/javascript")
  script(src="/controllers/ajax.js")
  script(src="/socket.io/socket.io.js")
  script.
      var socket = io.connect('https://entri-fetch.glitch.me/');
      socket.on('connect', function(data) {
        socket.emit('join', 'Hello World from client');
      });
  body
    main
    if data.isSearched
      if data.content.dataId
        if data.content.pageCounter
          div.result= data.content.pageCounter + ' pages'
            span(class='continue', data-pagecounter=data.content.pageCounter, data-title=data.content.dataTitle, data-id=data.content.dataId)  countinue?
            span(class='mainpage')  mainpage?
        else
          div.result= '1 page'
            span(class='continue', data-pagecounter=0, data-title=data.content.dataTitle, data-id=data.content.dataId)  countinue?
            span(class='mainpage')  mainpage?
    else
      form(method="get")
        input(class="search", type="search", name="search")
    footer
      a(href="https://glitch.com") Remix this in Glitch