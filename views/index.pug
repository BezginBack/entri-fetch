doctype html PUBLIC "-//W3C//DTD XHTML Basic 1.1//EN"
html
    head
        title= data.title 
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(id="favicon", rel="icon", href="https://cdn.glitch.com/aa1f58fa-6cac-4f01-9f72-fdf6fa60b0a2%2Ffav.ico?1532636260432", type="image/x-icon")
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
    link(rel="stylesheet", href="/style.css")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js", type="text/javascript")
    script(src="/controllers/ajax.js", type="text/javascript")
    body
        main
            div.result.row
            div.wait.row.text-center='Wait'
            if data.isSearched
                if data.content
                    if data.title != 'Error'
                        if data.content.pageCounter
                            div.data.text-success
                                strong=data.content.pageCounter 
                                span  pages found. 
                                span(class='continue', data-pagecounter=data.content.pageCounter, data-title=data.content.dataTitle, data-id=data.content.dataId) Countinue
                                span  or go to 
                                span(class='mainpage') Mainpage
                        else
                            div.data.text-success
                                strong 1 
                                span page found 
                                span(class='continue', data-pagecounter='1', data-title=data.content.dataTitle, data-id=data.content.dataId) Countinue
                                span  or go to 
                                span(class='mainpage') Mainpage
                    else
                        div.err.text-danger= data.content + ' '
                            span(class='mainpage') Mainpage
                else
                    div.return.text-info= 'No entries... '
                    span(class='mainpage') Mainpage
            else
                form(method="get")
                    input(class="search form-control", placeholder="enter whole title" type="search", name="search")
        footer
            a(href="https://glitch.com") Remix this in Glitch